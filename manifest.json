{
  "manifest_version": 3,
  "name": "Quick Todo",
  "version": "1.0",
  "author": "Ahmadreza Shamimi",
  "description": "A powerful todo list extension for Chrome. Manage tasks with status tags, track progress dates, and export your tasks to CSV.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
